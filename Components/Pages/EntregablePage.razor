@page "/entregable"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@inject IHttpClientFactory fabricaHttp
@rendermode InteractiveServer

<PageTitle>Entregables</PageTitle>

<h3>Gestión de Entregables</h3>

<div class="mb-3 d-flex gap-2">
    <button class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexión</button>
    <button class="btn btn-outline-primary" @onclick="CargarItems">Mostrar todos</button>
    <button class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

<EditForm Model="itemActual" OnValidSubmit="CrearOActualizar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-2">
            <label>Id</label>
            <InputNumber class="form-control" @bind-Value="itemActual.Id" disabled />
        </div>

        <div class="col-md-3">
            <label>Código</label>
            <InputText class="form-control" @bind-Value="itemActual.Codigo" />
        </div>

        <div class="col-md-7">
            <label>Título</label>
            <InputText class="form-control" @bind-Value="itemActual.Titulo" />
        </div>

        <div class="col-12">
            <label>Descripción</label>
            <InputTextArea class="form-control" @bind-Value="itemActual.Descripcion" />
        </div>

        <div class="col-md-3">
            <label>Fecha inicio</label>
            <InputDate class="form-control" @bind-Value="itemActual.FechaInicio" />
        </div>

        <div class="col-md-3">
            <label>Fecha fin prevista</label>
            <InputDate class="form-control" @bind-Value="itemActual.FechaFinPrevista" />
        </div>

        <div class="col-md-3">
            <label>Fecha modificación</label>
            <input class="form-control" value="@FormatearFecha(itemActual.FechaModificacion)" disabled />
        </div>

        <div class="col-md-3">
            <label>Fecha finalización</label>
            <InputDate class="form-control" @bind-Value="itemActual.FechaFinalizacion" />
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            @(existeItem ? "Actualizar" : "Crear")
        </button>
        <button class="btn btn-danger" @onclick="EliminarItem" disabled="@(!existeItem)">Eliminar</button>
    </div>
</EditForm>

<hr />

@if (lista.Count == 0)
{
    <p>No hay entregables registrados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Código</th>
                <th>Título</th>
                <th>Inicio</th>
                <th>Fin Prevista</th>
                <th>Finalización</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in lista)
            {
                <tr>
                    <td>@it.Id</td>
                    <td>@it.Codigo</td>
                    <td>@it.Titulo</td>
                    <td>@FormatearFecha(it.FechaInicio)</td>
                    <td>@FormatearFecha(it.FechaFinPrevista)</td>
                    <td>@FormatearFecha(it.FechaFinalizacion)</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary"
                                @onclick="() => CargarEnFormulario(it)">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (existeItem)
{
    <!-- ===================== ARCHIVOS ===================== -->
    <hr />
    <h5>Archivos asociados al entregable: @itemActual.Titulo</h5>

    <div class="row g-2 mb-3">
        <div class="col-md-8">
            <select class="form-select" @bind="archivoSeleccionado">
                <option value="">Seleccione archivo para asociar...</option>
                @foreach (var a in archivosDisponibles)
                {
                    <option value="@a.Id">@a.Nombre</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button class="btn btn-outline-primary w-100" @onclick="AsociarArchivo" disabled="@string.IsNullOrEmpty(archivoSeleccionado)">
                Asociar archivo
            </button>
        </div>
    </div>

    @if (archivosAsociados.Count == 0)
    {
        <p>No hay archivos asociados a este entregable.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Ruta</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in archivosAsociados)
                {
                    <tr>
                        <td>@a.Id</td>
                        <td>@a.Nombre</td>
                        <td>@a.Tipo</td>
                        <td>@a.Ruta</td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => QuitarArchivo(a.Id)">
                                Quitar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- ===================== ACTIVIDADES ===================== -->
    <hr />
    <h5>Actividades del entregable: @itemActual.Titulo</h5>

    <div class="row g-2 mb-3">
        <div class="col-md-4">
            <label>Título</label>
            <InputText class="form-control" @bind-Value="actividadActual.Titulo" />
        </div>

        <div class="col-md-4">
            <label>Prioridad</label>
            <InputNumber class="form-control" @bind-Value="actividadActual.Prioridad" />
        </div>

        <div class="col-md-4">
            <label>Avance (%)</label>
            <InputNumber class="form-control" @bind-Value="actividadActual.PorcentajeAvance" />
        </div>

        <div class="col-md-12">
            <label>Descripción</label>
            <InputTextArea class="form-control" @bind-Value="actividadActual.Descripcion" />
        </div>

        <div class="col-md-3">
            <label>Inicio</label>
            <InputDate class="form-control" @bind-Value="actividadActual.FechaInicio" />
        </div>

        <div class="col-md-3">
            <label>Fin prevista</label>
            <InputDate class="form-control" @bind-Value="actividadActual.FechaFinPrevista" />
        </div>

        <div class="col-md-3">
            <label>Finalización</label>
            <InputDate class="form-control" @bind-Value="actividadActual.FechaFinalizacion" />
        </div>

        <div class="col-md-3">
            <label> </label>
            <button class="btn btn-outline-primary w-100" @onclick="AgregarActividad">Agregar actividad</button>
        </div>
    </div>

    @if (actividades.Count == 0)
    {
        <p>No hay actividades registradas para este entregable.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Inicio</th>
                    <th>Fin Prevista</th>
                    <th>Finalización</th>
                    <th>Prioridad</th>
                    <th>Avance (%)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in actividades)
                {
                    <tr>
                        <td>@a.Titulo</td>
                        <td>@FormatearFecha(a.FechaInicio)</td>
                        <td>@FormatearFecha(a.FechaFinPrevista)</td>
                        <td>@FormatearFecha(a.FechaFinalizacion)</td>
                        <td>@a.Prioridad</td>
                        <td>@a.PorcentajeAvance</td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarActividad(a.Id)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- ===================== RESPONSABLES ===================== -->
    <hr />
    <h5>Responsables asociados al entregable: @itemActual.Titulo</h5>

    <div class="row g-2 mb-3">
        <div class="col-md-8">
            <select class="form-select" @bind="responsableSeleccionado">
                <option value="">Seleccione responsable...</option>
                @foreach (var r in responsablesDisponibles)
                {
                    <option value="@r.Id">@r.Nombre</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button class="btn btn-outline-primary w-100" @onclick="AsociarResponsable" disabled="@string.IsNullOrEmpty(responsableSeleccionado)">
                Asociar responsable
            </button>
        </div>
    </div>

    @if (responsablesAsociados.Count == 0)
    {
        <p>No hay responsables asociados a este entregable.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in responsablesAsociados)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.Nombre</td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => QuitarResponsable(r.Id)">
                                Quitar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    // === ENTREGABLES ===
    private List<Entregable> lista = new();
    private Entregable itemActual = new();
    private bool existeItem = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private const string urlBaseApi = "api/entregable";

    // === ARCHIVOS ===
    private List<Archivo> archivosDisponibles = new();
    private List<Archivo> archivosAsociados = new();
    private string? archivoSeleccionado;

    // === ACTIVIDADES ===
    private List<Actividad> actividades = new();
    private Actividad actividadActual = new();

    // === RESPONSABLES ===
    private List<Responsable> responsablesDisponibles = new();
    private List<Responsable> responsablesAsociados = new();
    private string? responsableSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        await CargarItems();
        await CargarArchivosDisponibles();
        await CargarResponsablesDisponibles();
    }

    private static string FormatearFecha(DateTime? f) => f?.ToString("yyyy-MM-dd") ?? "";

    // === CRUD Entregables ===
    private async Task CargarItems()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiEntregable<List<Entregable>>>(urlBaseApi);
        lista = resp?.Datos ?? new();
    }

    private async Task CrearOActualizar()
    {
        if (existeItem)
            await ActualizarItem();
        else
            await CrearItem();
    }

    private async Task CrearItem()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "Codigo", itemActual.Codigo },
            { "Titulo", itemActual.Titulo },
            { "Descripcion", itemActual.Descripcion },
            { "FechaInicio", itemActual.FechaInicio },
            { "FechaFinPrevista", itemActual.FechaFinPrevista },
            { "FechaFinalizacion", itemActual.FechaFinalizacion },
            { "FechaModificacion", DateTime.Now }
        };
        var resp = await cli.PostAsJsonAsync(urlBaseApi, datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Entregable creado correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            mensaje = "Error al crear entregable.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarItem()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "Codigo", itemActual.Codigo },
            { "Titulo", itemActual.Titulo },
            { "Descripcion", itemActual.Descripcion },
            { "FechaInicio", itemActual.FechaInicio },
            { "FechaFinPrevista", itemActual.FechaFinPrevista },
            { "FechaFinalizacion", itemActual.FechaFinalizacion },
            { "FechaModificacion", DateTime.Now }
        };
        var resp = await cli.PutAsJsonAsync($"{urlBaseApi}/id/{itemActual.Id}", datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Entregable actualizado correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
        }
        else
        {
            mensaje = "Error al actualizar entregable.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarItem()
    {
        if (itemActual.Id <= 0) return;
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"{urlBaseApi}/id/{itemActual.Id}");

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Entregable eliminado correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            mensaje = "Error al eliminar entregable.";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Entregable it)
    {
        itemActual = it;
        existeItem = true;
        mensaje = $"Entregable seleccionado: {it.Titulo}";
        claseAviso = "alert alert-info";
        _ = CargarArchivosAsociados(it.Id);
        _ = CargarActividades();
        _ = CargarResponsablesDisponibles();
        _ = CargarResponsablesAsociados(it.Id);
    }

    private void LimpiarFormulario()
    {
        itemActual = new();
        existeItem = false;
        archivosAsociados.Clear();
        actividades.Clear();
        responsablesAsociados.Clear();
        mensaje = "";
    }

    // === ARCHIVOS ASOCIADOS ===
    private async Task CargarArchivosDisponibles()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiArchivo<List<Archivo>>>("api/archivo");
        archivosDisponibles = resp?.Datos ?? new();
    }

    private async Task CargarArchivosAsociados(int idEntregable)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiArchivoEntregable<List<Archivo_Entregable>>>($"api/archivo_entregable/identregable/{idEntregable}");
        if (resp?.Datos != null)
        {
            var asociaciones = resp.Datos;
            archivosAsociados = archivosDisponibles.Where(a => asociaciones.Any(x => x.IdArchivo == a.Id)).ToList();
        }
        else archivosAsociados.Clear();
    }

    private async Task AsociarArchivo()
    {
        if (string.IsNullOrEmpty(archivoSeleccionado)) return;
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdArchivo", int.Parse(archivoSeleccionado) },
            { "IdEntregable", itemActual.Id }
        };
        var resp = await cli.PostAsJsonAsync("api/archivo_entregable", datos);
        if (resp.IsSuccessStatusCode)
        {
            await CargarArchivosAsociados(itemActual.Id);
            mensaje = "Archivo asociado correctamente.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "Error al asociar archivo.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task QuitarArchivo(int idArchivo)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"api/archivo_entregable/idarchivo/{idArchivo}");
        if (resp.IsSuccessStatusCode)
        {
            await CargarArchivosAsociados(itemActual.Id);
            mensaje = "Archivo eliminado del entregable.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "Error al eliminar relación archivo-entregable.";
            claseAviso = "alert alert-danger";
        }
    }

    // === ACTIVIDADES ===
    private async Task CargarActividades()
    {
        if (itemActual.Id <= 0) return;
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiActividad<List<Actividad>>>($"api/actividad/identregable/{itemActual.Id}");
        actividades = resp?.Datos ?? new();
    }

    private async Task AgregarActividad()
    {
        if (itemActual.Id <= 0)
        {
            mensaje = "Debe seleccionar un entregable antes de agregar una actividad.";
            claseAviso = "alert alert-warning";
            return;
        }
        if (string.IsNullOrWhiteSpace(actividadActual.Titulo))
        {
            mensaje = "El título de la actividad es obligatorio.";
            claseAviso = "alert alert-warning";
            return;
        }

        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdEntregable", itemActual.Id },
            { "Titulo", actividadActual.Titulo },
            { "Descripcion", actividadActual.Descripcion },
            { "FechaInicio", actividadActual.FechaInicio },
            { "FechaFinPrevista", actividadActual.FechaFinPrevista },
            { "FechaFinalizacion", actividadActual.FechaFinalizacion },
            { "Prioridad", actividadActual.Prioridad },
            { "PorcentajeAvance", actividadActual.PorcentajeAvance },
            { "FechaModificacion", DateTime.Now }
        };
        var resp = await cli.PostAsJsonAsync("api/actividad", datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Actividad agregada correctamente.";
            claseAviso = "alert alert-success";
            actividadActual = new();
            await CargarActividades();
        }
        else
        {
            var detalle = await resp.Content.ReadAsStringAsync();
            mensaje = $"Error al agregar actividad: {detalle}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarActividad(int idActividad)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"api/actividad/id/{idActividad}");
        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Actividad eliminada correctamente.";
            claseAviso = "alert alert-success";
            await CargarActividades();
        }
        else
        {
            mensaje = "Error al eliminar actividad.";
            claseAviso = "alert alert-danger";
        }
    }

    // === RESPONSABLES ===
    private async Task CargarResponsablesDisponibles()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiResponsable<List<Responsable>>>("api/responsable");
        responsablesDisponibles = resp?.Datos ?? new();
    }

    private async Task CargarResponsablesAsociados(int idEntregable)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiResponsableEntregable<List<Responsable_Entregable>>>($"api/responsable_entregable/identregable/{idEntregable}");
        if (resp?.Datos != null)
        {
            var asociaciones = resp.Datos;
            responsablesAsociados = responsablesDisponibles
                .Where(r => asociaciones.Any(x => x.IdResponsable == r.Id))
                .ToList();
        }
        else responsablesAsociados.Clear();
    }

    private async Task AsociarResponsable()
    {
        if (string.IsNullOrEmpty(responsableSeleccionado)) return;

        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdResponsable", int.Parse(responsableSeleccionado) },
            { "IdEntregable", itemActual.Id },
            { "FechaAsociacion", DateTime.Now }
        };
        var resp = await cli.PostAsJsonAsync("api/responsable_entregable", datos);

        if (resp.IsSuccessStatusCode)
        {
            await CargarResponsablesAsociados(itemActual.Id);
            mensaje = "Responsable asociado correctamente.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "Error al asociar responsable.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task QuitarResponsable(int idResponsable)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"api/responsable_entregable/idresponsable/{idResponsable}");
        if (resp.IsSuccessStatusCode)
        {
            await CargarResponsablesAsociados(itemActual.Id);
            mensaje = "Responsable eliminado del entregable.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "Error al eliminar relación responsable-entregable.";
            claseAviso = "alert alert-danger";
        }
    }

    // === OTROS ===
    private async Task ProbarConexion()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetAsync(urlBaseApi);
        mensaje = resp.IsSuccessStatusCode ? "Conexión OK" : "Error de conexión";
        claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-danger";
    }
}
