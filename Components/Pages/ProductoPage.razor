@page "/producto"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@inject IHttpClientFactory fabricaHttp
@rendermode InteractiveServer

<PageTitle>Productos</PageTitle>

<h3>Gestión de Productos</h3>

<div class="mb-3 d-flex gap-2">
    <button class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexión</button>
    <button class="btn btn-outline-primary" @onclick="CargarItems">Mostrar todos</button>
    <button class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

<EditForm Model="itemActual" OnValidSubmit="CrearOActualizar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-2">
            <label>Id</label>
            <InputNumber class="form-control" @bind-Value="itemActual.Id" disabled />
        </div>

        <div class="col-md-4">
            <label>Tipo de Producto</label>
            <select class="form-select" @bind="itemActual.IdTipoProducto">
                <option value="">Seleccione...</option>
                @foreach (var tipo in tiposProducto)
                {
                    <option value="@tipo.Id">@tipo.Nombre</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Código</label>
            <InputText class="form-control" @bind-Value="itemActual.Codigo" />
        </div>

        <div class="col-md-3">
            <label>Título</label>
            <InputText class="form-control" @bind-Value="itemActual.Titulo" />
        </div>

        <div class="col-12">
            <label>Descripción</label>
            <InputTextArea class="form-control" @bind-Value="itemActual.Descripcion" />
        </div>

        <div class="col-md-3">
            <label>Fecha inicio</label>
            <InputDate class="form-control" @bind-Value="itemActual.FechaInicio" />
        </div>

        <div class="col-md-3">
            <label>Fecha fin prevista</label>
            <InputDate class="form-control" @bind-Value="itemActual.FechaFinPrevista" />
        </div>

        <div class="col-md-3">
            <label>Fecha modificación</label>
            <input class="form-control" value="@FormatearFecha(itemActual.FechaModificacion)" disabled />
        </div>

        <div class="col-md-3">
            <label>Fecha finalización</label>
            <InputDate class="form-control" @bind-Value="itemActual.FechaFinalizacion" />
        </div>

        <div class="col-12">
            <label>Ruta del Logo</label>
            <InputText class="form-control" @bind-Value="itemActual.RutaLogo" />
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            @(existeItem ? "Actualizar" : "Crear")
        </button>
        <button class="btn btn-danger" @onclick="EliminarItem" disabled="@(!existeItem)">Eliminar</button>
    </div>
</EditForm>

<hr />

@if (lista.Count == 0)
{
    <p>No hay productos registrados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Tipo</th>
                <th>Código</th>
                <th>Inicio</th>
                <th>Fin Prevista</th>
                <th>Finalización</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in lista)
            {
                <tr>
                    <td>@it.Id</td>
                    <td>@it.Titulo</td>
                    <td>@tiposProducto.FirstOrDefault(t => t.Id == it.IdTipoProducto)?.Nombre</td>
                    <td>@it.Codigo</td>
                    <td>@FormatearFecha(it.FechaInicio)</td>
                    <td>@FormatearFecha(it.FechaFinPrevista)</td>
                    <td>@FormatearFecha(it.FechaFinalizacion)</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => CargarEnFormulario(it)">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<hr />
<h5>Entregables asociados al producto: @itemActual.Titulo</h5>

<div class="row g-2 mb-3">
    <div class="col-md-8">
        <select class="form-select" @bind="entregableSeleccionado">
            <option value="">Seleccione entregable...</option>
            @foreach (var e in entregablesDisponibles)
            {
                <option value="@e.Id">@e.Titulo</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button class="btn btn-outline-primary w-100"
                @onclick="AsociarEntregable"
                disabled="@string.IsNullOrEmpty(entregableSeleccionado)">
            Asociar entregable
        </button>
    </div>
</div>

@if (entregablesAsociados.Count == 0)
{
    <p>No hay entregables asociados a este producto.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in entregablesAsociados)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Titulo</td>
                    <td>
                        <button class="btn btn-sm btn-outline-danger"
                                @onclick="() => QuitarEntregable(e.Id)">
                            Quitar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<Producto> lista = new();
    private Producto itemActual = new();
    private bool existeItem = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private const string urlBaseApi = "api/producto";

    private List<TipoProducto> tiposProducto = new();

    // === ENTREGABLES ASOCIADOS ===
    private List<Entregable> entregablesDisponibles = new();
    private List<Entregable> entregablesAsociados = new();
    private string? entregableSeleccionado;
    protected override async Task OnInitializedAsync()
    {
        await CargarTiposProducto();
        await CargarItems();
        await CargarEntregablesDisponibles();
    }

    private static string FormatearFecha(DateTime? f) => f?.ToString("yyyy-MM-dd") ?? "";

    private async Task CargarTiposProducto()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiProducto<List<TipoProducto>>>("api/tipoproyecto");
        tiposProducto = resp?.Datos ?? new();
    }

    private async Task CargarItems()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiProducto<List<Producto>>>(urlBaseApi);
        lista = resp?.Datos ?? new();
    }

    private async Task CrearOActualizar()
    {
        if (existeItem)
            await ActualizarItem();
        else
            await CrearItem();
    }

    private async Task CrearItem()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdTipoProducto", itemActual.IdTipoProducto },
            { "Codigo", itemActual.Codigo },
            { "Titulo", itemActual.Titulo },
            { "Descripcion", itemActual.Descripcion },
            { "FechaInicio", itemActual.FechaInicio },
            { "FechaFinPrevista", itemActual.FechaFinPrevista },
            { "FechaFinalizacion", itemActual.FechaFinalizacion },
            { "FechaModificacion", DateTime.Now },
            { "RutaLogo", itemActual.RutaLogo }
        };
        var resp = await cli.PostAsJsonAsync(urlBaseApi, datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Producto creado correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            mensaje = "Error al crear producto.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarItem()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdTipoProducto", itemActual.IdTipoProducto },
            { "Codigo", itemActual.Codigo },
            { "Titulo", itemActual.Titulo },
            { "Descripcion", itemActual.Descripcion },
            { "FechaInicio", itemActual.FechaInicio },
            { "FechaFinPrevista", itemActual.FechaFinPrevista },
            { "FechaFinalizacion", itemActual.FechaFinalizacion },
            { "FechaModificacion", DateTime.Now },
            { "RutaLogo", itemActual.RutaLogo }
        };
        var resp = await cli.PutAsJsonAsync($"{urlBaseApi}/id/{itemActual.Id}", datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Producto actualizado correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
        }
        else
        {
            mensaje = "Error al actualizar producto.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarItem()
    {
        if (itemActual.Id <= 0) return;
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"{urlBaseApi}/id/{itemActual.Id}");

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Producto eliminado correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            mensaje = "Error al eliminar producto.";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(Producto it)
    {
        itemActual = it;
        existeItem = true;
        mensaje = $"Producto seleccionado: {it.Titulo}";
        claseAviso = "alert alert-info";
    }

    private void LimpiarFormulario()
    {
        itemActual = new();
        existeItem = false;
        mensaje = "";
        claseAviso = "alert alert-info";
    }
    private async Task CargarEntregablesDisponibles()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiEntregable<List<Entregable>>>("api/entregable");
        entregablesDisponibles = resp?.Datos ?? new();
    }

    private async Task CargarEntregablesAsociados(int idProducto)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiProductoEntregable<List<Producto_Entregable>>>($"api/producto_entregable/idproducto/{idProducto}");
        if (resp?.Datos != null)
        {
            var asociaciones = resp.Datos;
            entregablesAsociados = entregablesDisponibles
                .Where(e => asociaciones.Any(x => x.IdEntregable == e.Id))
                .ToList();
        }
        else entregablesAsociados.Clear();
    }

    private async Task AsociarEntregable()
    {
        if (string.IsNullOrEmpty(entregableSeleccionado)) return;
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdProducto", itemActual.Id },
            { "IdEntregable", int.Parse(entregableSeleccionado) },
            { "FechaAsociacion", DateTime.Now }
        };
        var resp = await cli.PostAsJsonAsync("api/producto_entregable", datos);
        if (resp.IsSuccessStatusCode)
        {
            await CargarEntregablesAsociados(itemActual.Id);
            mensaje = "Entregable asociado correctamente.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "Error al asociar entregable.";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task QuitarEntregable(int idEntregable)
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"api/producto_entregable/identregable/{idEntregable}");
        if (resp.IsSuccessStatusCode)
        {
            await CargarEntregablesAsociados(itemActual.Id);
            mensaje = "Entregable eliminado del producto.";
            claseAviso = "alert alert-success";
        }
        else
        {
            mensaje = "Error al eliminar entregable.";
            claseAviso = "alert alert-danger";
        }
    }    
    private async Task ProbarConexion()
        {
            var cli = fabricaHttp.CreateClient("ApiProductos");
            var resp = await cli.GetAsync(urlBaseApi);
            mensaje = resp.IsSuccessStatusCode ? "Conexión OK" : "Error de conexión";
            claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-danger";
        }
}
