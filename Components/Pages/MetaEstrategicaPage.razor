@page "/meta-estrategica"

@using System.Net.Http.Json
@using FrontendBlazorApi.Models
@inject IHttpClientFactory fabricaHttp
@rendermode InteractiveServer

<PageTitle>Metas Estratégicas</PageTitle>

<h3>Gestión de Metas Estratégicas</h3>

<div class="mb-3 d-flex gap-2">
    <button class="btn btn-outline-secondary" @onclick="ProbarConexion">Probar conexión</button>
    <button class="btn btn-outline-primary" @onclick="CargarItems">Mostrar todos</button>
    <button class="btn btn-outline-dark" @onclick="LimpiarFormulario">Limpiar</button>
</div>

@if (!string.IsNullOrWhiteSpace(mensaje))
{
    <div class="@claseAviso" role="alert">@mensaje</div>
}

<EditForm Model="itemActual" OnValidSubmit="CrearOActualizar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row g-3">
        <div class="col-md-2">
            <label>Id</label>
            <InputNumber class="form-control" @bind-Value="itemActual.Id" disabled />
        </div>

        <div class="col-md-5">
            <label>Objetivo Estratégico</label>
            <select class="form-select" @bind="itemActual.IdObjetivo">
                <option value="">Seleccione...</option>
                @foreach (var o in objetivosEstrategicos)
                {
                    <option value="@o.Id">@o.Titulo</option>
                }
            </select>
        </div>

        <div class="col-md-5">
            <label>Título</label>
            <InputText class="form-control" @bind-Value="itemActual.Titulo" />
        </div>

        <div class="col-12">
            <label>Descripción</label>
            <InputTextArea class="form-control" @bind-Value="itemActual.Descripcion" />
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            @(existeItem ? "Actualizar" : "Crear")
        </button>
        <button class="btn btn-danger" @onclick="EliminarItem" disabled="@(!existeItem)">Eliminar</button>
    </div>
</EditForm>

<hr />

@if (lista.Count == 0)
{
    <p>No hay metas estratégicas registradas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Objetivo</th>
                <th>Título</th>
                <th>Descripción</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in lista)
            {
                <tr>
                    <td>@it.Id</td>
                    <td>@objetivosEstrategicos.FirstOrDefault(o => o.Id == it.IdObjetivo)?.Titulo</td>
                    <td>@it.Titulo</td>
                    <td>@it.Descripcion</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary"
                                @onclick="() => CargarEnFormulario(it)">
                            Cargar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MetaEstrategica> lista = new();
    private List<ObjetivoEstrategico> objetivosEstrategicos = new();
    private MetaEstrategica itemActual = new();
    private bool existeItem = false;
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private const string urlBaseApi = "api/metaestrategica";

    protected override async Task OnInitializedAsync()
    {
        await CargarObjetivosEstrategicos();
        await CargarItems();
    }

    private async Task CargarObjetivosEstrategicos()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiObjetivoEstrategico<List<ObjetivoEstrategico>>>("api/objetivoestrategico");
        objetivosEstrategicos = resp?.Datos ?? new();
    }

    private async Task CargarItems()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetFromJsonAsync<RespuestaApiMetaEstrategica<List<MetaEstrategica>>>(urlBaseApi);
        lista = resp?.Datos ?? new();
    }

    private async Task CrearOActualizar()
    {
        if (existeItem)
            await ActualizarItem();
        else
            await CrearItem();
    }

    private async Task CrearItem()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdObjetivo", itemActual.IdObjetivo },
            { "Titulo", itemActual.Titulo },
            { "Descripcion", itemActual.Descripcion }
        };

        var resp = await cli.PostAsJsonAsync(urlBaseApi, datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Meta estratégica creada correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            var detalle = await resp.Content.ReadAsStringAsync();
            mensaje = $"Error al crear meta: {detalle}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task ActualizarItem()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var datos = new Dictionary<string, object?>
        {
            { "IdObjetivo", itemActual.IdObjetivo },
            { "Titulo", itemActual.Titulo },
            { "Descripcion", itemActual.Descripcion }
        };

        var resp = await cli.PutAsJsonAsync($"{urlBaseApi}/id/{itemActual.Id}", datos);

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Meta estratégica actualizada correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            var detalle = await resp.Content.ReadAsStringAsync();
            mensaje = $"Error al actualizar meta: {detalle}";
            claseAviso = "alert alert-danger";
        }
    }

    private async Task EliminarItem()
    {
        if (itemActual.Id <= 0) return;

        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.DeleteAsync($"{urlBaseApi}/id/{itemActual.Id}");

        if (resp.IsSuccessStatusCode)
        {
            mensaje = "Meta estratégica eliminada correctamente.";
            claseAviso = "alert alert-success";
            await CargarItems();
            LimpiarFormulario();
        }
        else
        {
            var detalle = await resp.Content.ReadAsStringAsync();
            mensaje = $"Error al eliminar meta: {detalle}";
            claseAviso = "alert alert-danger";
        }
    }

    private void CargarEnFormulario(MetaEstrategica it)
    {
        itemActual = new MetaEstrategica
        {
            Id = it.Id,
            IdObjetivo = it.IdObjetivo,
            Titulo = it.Titulo,
            Descripcion = it.Descripcion
        };
        existeItem = true;
        mensaje = $"Editando meta: {it.Titulo}";
        claseAviso = "alert alert-warning";
    }

    private void LimpiarFormulario()
    {
        itemActual = new();
        existeItem = false;
        mensaje = "";
    }

    private async Task ProbarConexion()
    {
        var cli = fabricaHttp.CreateClient("ApiProductos");
        var resp = await cli.GetAsync(urlBaseApi);
        mensaje = resp.IsSuccessStatusCode ? "Conexión OK" : "Error de conexión";
        claseAviso = resp.IsSuccessStatusCode ? "alert alert-success" : "alert alert-danger";
    }
}
